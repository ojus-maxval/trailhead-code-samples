<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>To_ADU_when_received_new_orders1</fullName>
        <description>To ADU when received new orders1</description>
        <protected>false</protected>
        <recipients>
            <recipient>mars-qat@maxval.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/To_ADU_when_Order_Received</template>
    </alerts>
    <fieldUpdates>
        <fullName>Invoice_status_update</fullName>
        <field>Payment_Status__c</field>
        <literalValue>Invoice to be modified</literalValue>
        <name>Invoice status update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Uncheck_send_Invoice</fullName>
        <field>Is_Sent_Invoice__c</field>
        <literalValue>0</literalValue>
        <name>Uncheck send Invoice</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Invoicing_Status_Update_Cancelled</fullName>
        <actions>
            <name>Invoice_status_update</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Uncheck_send_Invoice</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>H_Asset_status__c &gt; 0</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Send Mail to ADU</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Order__c.Payment_Status__c</field>
            <operation>equals</operation>
            <value>To be Invoiced</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>To_ADU_when_received_new_orders1</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Order__c.h_Trigger_Time_05__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
